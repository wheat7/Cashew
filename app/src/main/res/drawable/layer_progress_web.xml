<?xml version="1.0" encoding="utf-8"?>

    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

        <item android:id="@android:id/background">
            <shape>
                <corners android:radius="5dip" />
                <gradient android:startColor="#ffffff"
                    android:centerColor="#ffffff" android:centerY="0.75"
                    android:endColor="#ffffff" android:angle="270" />
            </shape>
        </item>


        <item android:id="@android:id/progress">
            <clip>
                <shape>
                    <corners android:radius="5dip" />
                    <gradient android:startColor="#515151"
                        android:centerColor="#515151" android:centerY="0.75"
                        android:endColor="#515151" android:angle="270" />
                </shape>
            </clip>
        </item>
    </layer-list>